---
import Layout from '../layouts/Layout.astro';
import FAQ from '../components/FAQ';

import illustrationShadow from '../../public/bg-pattern-mobile.svg?url';
import illustrationWoman from '../../public/illustration-woman-online-mobile.svg?url';

import shadowDesktop from '../../public/bg-pattern-desktop.svg?url';
import womanDesktop from '../../public/illustration-woman-online-desktop.svg?url';
import boxDesktop from '../../public/illustration-box-desktop.svg?url';

import '@fontsource/kumbh-sans/400.css';
import '@fontsource/kumbh-sans/700.css';
---

<Layout title="FEM FAQ Component">
  <main>
    <div class="card">
      <div class="decoration-container">
        <div class="decoration">
          <img class="illustration-box" src={boxDesktop} alt="" />
          <img class="illustration-woman-desktop" src={womanDesktop} alt="" />
          <img class="illustration-shadow-desktop" src={shadowDesktop} alt="" />
          <img
            class="illustration-woman-mobile"
            src={illustrationWoman}
            alt=""
          />
          <img
            class="illustration-shadow-mobile"
            src={illustrationShadow}
            alt=""
          />
        </div>
      </div>
      <div class="faq-container">
        <div class="heading-container">
          <h1>FAQ</h1>
        </div>
        <FAQ client:load />
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    --shadow-color: 249deg 57% 39%;
    --shadow-elevation-low: 0.2px 0.4px 0.5px hsl(var(--shadow-color) / 0.34),
      0.4px 0.6px 0.8px -1.2px hsl(var(--shadow-color) / 0.34),
      0.9px 1.6px 2.1px -2.5px hsl(var(--shadow-color) / 0.34);
    --shadow-elevation-medium: 0.2px 0.4px 0.5px hsl(var(--shadow-color) / 0.36),
      0.7px 1.3px 1.7px -0.8px hsl(var(--shadow-color) / 0.36),
      1.8px 3.2px 4.1px -1.7px hsl(var(--shadow-color) / 0.36),
      4.3px 7.8px 10px -2.5px hsl(var(--shadow-color) / 0.36);
    --shadow-elevation-high: 0.2px 0.4px 0.5px hsl(var(--shadow-color) / 0.34),
      1.3px 2.3px 3px -0.4px hsl(var(--shadow-color) / 0.34),
      2.3px 4.3px 5.5px -0.7px hsl(var(--shadow-color) / 0.34),
      3.8px 7px 9px -1.1px hsl(var(--shadow-color) / 0.34),
      6.1px 11.2px 14.3px -1.4px hsl(var(--shadow-color) / 0.34),
      9.6px 17.5px 22.5px -1.8px hsl(var(--shadow-color) / 0.34),
      14.6px 26.6px 34.1px -2.1px hsl(var(--shadow-color) / 0.34),
      21.5px 39.2px 50.3px -2.5px hsl(var(--shadow-color) / 0.34);
  }

  html {
    font-family: 'Kumbh Sans';
  }

  main {
    padding: 0px 16px;
    background: linear-gradient(180deg, #b068e9 0%, #6463e7 100%, #6463e7 100%);
    min-height: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  h1 {
    font-size: 2.5rem;
    padding-bottom: 0.5rem;
  }

  .heading-container {
    display: flex;
    justify-content: center;
    margin-top: -15rem;
  }

  .card {
    background: #fff;
    border-radius: 1.5rem;
    width: 100%;
    padding-top: 3rem;
    padding-bottom: 3rem;
    max-width: calc(500rem / 16);
    box-shadow: var(--shadow-elevation-medium);
  }

  .decoration-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .decoration {
    padding: 0px 32px;
    transform: translateY(-52%);
    width: 350px;
  }

  .illustration-woman-mobile,
  .illustration-shadow-mobile {
    width: 100%;
    height: 100%;
  }

  .illustration-shadow-desktop {
    display: none;
  }

  .illustration-woman-desktop {
    display: none;
  }

  .illustration-shadow-mobile {
    transform: translateY(-75%);
  }

  .desktop-decoration-container {
    display: none;
  }

  .illustration-box {
    display: none;
  }

  @media (min-width: 64rem) {
    .card {
      max-width: calc(1000rem / 16);
      display: flex;
      overflow: hidden;
      z-index: 1;
    }

    .heading-container {
      margin-top: 0px;
      justify-content: flex-start;
    }

    .decoration-container {
      align-items: center;
      justify-content: center;
      overflow: visible;
    }

    .decoration {
      width: 450px;
      transform: translateX(-20%);
      position: relative;
      left: -15px;
      overflow: visible;
      z-index: 3;
    }

    .illustration-shadow-desktop {
      display: revert;
      position: absolute;
      top: -325px;
      left: -375px;
      width: 800px;

      max-width: 964px;
      z-index: 0;
    }

    .illustration-woman-desktop {
      display: revert;
      position: relative;
      z-index: 1;
    }

    .illustration-woman-mobile {
      display: none;
    }

    .illustration-shadow-mobile {
      display: none;
    }

    .illustration-box {
      display: block;
      position: absolute;
      top: 115px;
      left: 0px;
      z-index: 2;
    }

    .faq-container {
      transform: translateX(25px);
    }
  }
</style>
